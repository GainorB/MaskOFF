<%- include('../partials/header') %>
<p><%- messages('message', locals) %></p>
<ul>
    <% if(errors){ %>
        <% for(const error of errors){ %>
            <li id="errors"><%= error.msg %></li>
        <% } %>
    <% } %>
</ul>
<form method='POST' action='/auth/register'>
    <p>Username: <input type="text" name="username" required></p>
    <p>Password: <input type="text" name="password" required></p>
    <p>Confirm Password: <input type="text" name="password2" required></p>
    <p>Email: <input type="email" name="email" required></p>
    <p>State: <input type="text" name="state" required></p>
    <p>City: <input type="text" name="city" required></p>
    <p>Gender:
        <select name="gender" required>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        </select>
    </p>
    <p>Age: <input type="number" name="age" required></p>
    <p>Already have an account? <a href="/auth/login">Log In</a></p>
    <button type="submit">REGISTER</button>
    </form>
<%- include('../partials/footer') %>