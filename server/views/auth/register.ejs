<%- include('../partials/header') %>
<div class="container register">
    <div class="row center-xs center-sm center-md center-lg middle-xs middle-sm middle-md middle-lg">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

<nav class="navbar">
    <% if(!user) { %>
    <li><a href="/">Login</a></li>
    <li><a href="/auth/register">Register</a></li>
    <li><a href="/browse">Browse</a></li>
    <li><a href="/learnmore">Learn More</a></li>
    <% } else { %>
    <li><a href="/dashboard/">Dashboard</a></li>
    <li><a href="/learnmore">Learn More</a></li><br>
    <li><a href="/browse">Browse</a></li>
    <li><a href="/dashboard/accepted">My Trades</a></li>
    <li><a href="/dashboard/create">Create a Listing</a></li>
    <% } %>
</nav>

<div id="boxbox">          
<h1>Account Registration</h1>
<p>Please take some time to register. A profile gives you access to accepting listings!</p>
    <p><%- messages('message', locals) %></p>
    <ul>
        <% if(errors){ %>
            <% for(const error of errors){ %>
                <li id="errors"><%= error.msg %></li>
            <% } %>
        <% } %>
    </ul>

    <form method='POST' action='/auth/register'>
        <p><input type="text" name="username" placeholder="Username"></p>
        <p><input type="password" name="password" placeholder="Password"></p>
        <p><input type="password" name="password2" placeholder="Confirm Password"></p>
        <p><input type="email" name="email" placeholder="Email"></p>
        <p><input type="text" name="state" placeholder="State"></p>
        <p><input type="text" name="city" placeholder="City"></p>
        <p>
            <select name="gender">
            <option value="Gender" selected>Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            </select>
        </p>
        <p><input id="number" type="number" name="age" placeholder="Age" min="18"></p>
        <p>Already have an account? <a href="/auth/login">Log In</a></p>
        <button type="submit">REGISTER</button> <button type="reset">RESET</button>
    </form>
</div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/javascripts/register.js"></script>
<%- include('../partials/footer') %>