<% if(data.title != "") { %>
    <h1>Listings currently available</h1>

    <% if(!user) { %>
        <h3><a class="inlineLinks" href="/">Login</a> to view detailed information about each item.</h3>
    <% } %>
    <p>
    <b>Filter by</b><br>
    <form method='POST' action='/browse/filter'>
    <select name="category">
        <option value="Sneakers" selected>Sneakers</option>
        <option value="Clothing">Clothing</option>
        <option value="Accessories">Accessories</option>
    </select>

    <select name="brand">
        <option value="Adidas" selected>Adidas</option>
        <option value="Nike">Nike</option>
        <option value="Supreme">Supreme</option>
        <option value="Palace">Palace</option>
        <option value="John Elliot">John Elliot</option>
    </select>
    <button type="submit">Filter</button>
    </form>
    </p>

    <h3>Click View Listing to see detailed information regarding that item.</h3>
    <% data.forEach(function(d) { %>
    <div class="container aListing">
        <div class="row center-xs center-sm center-md start-lg middle-xs middle-sm middle-md middle-lg">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6">
                <p class="listingTitle"><%= d.title %> (<%= d.condition %>)</p>
                <p><a href="/browse/<%= d.id %>"><img src="<%= d.image1 %>"></a></p>
                <p class="listingBy">Posted by <%= d.posted_by %></p>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5">
                <p>Trading a/n <b><%= d.size %></b></p>
                <p>Looking for a/n <b><%= d.whatsize %></b></p>
                <p>Willing to throw cash?
                <% if(d.cash === 0) { %>
                <span class="noMoney"><b>No</b></span>
                <% } else { %>
                <span class="money"><b>$<%= d.cash %></b></span>
                <% } %>
                </p>
                <p>Located in <b><%= d.city %>, <%= d.state %></b></p>
                <% if(user) { %>
                <a href="/browse/<%= d.id %>"><button>View Listing</button></a>
                <% } else { %>
                <a href="/browse/<%= d.id %>"><button>Login to view detailed information</button></a>
                <% } %>
            </div>
        </div>
    </div>
    <% }) %>

<% } else { %>

<h1>No current listings, be the first to <a class="inlineLinks" href="/dashboard/create">create one!</a></h1>

<% } %>